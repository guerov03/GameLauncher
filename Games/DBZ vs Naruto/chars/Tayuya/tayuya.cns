trigger1 = AnimElemTime(1) >= 0 && AnimElemTime(2) < 0
edge = 60,0

[State 810, Bind 2-4]
type = TargetBind
trigger1 = AnimElemTime(1) >= 0 && AnimElemTime(2) < 0
pos = 28, 0

[State 810, Bind 5]
type = TargetBind
trigger1 = AnimElemTime(1) >= 0 && AnimElemTime(2) < 0
pos = 28, 0

[State 810, holdfwd - Turn 2] ;If was holding fwd before, turn now
