;---------------------------------------------------------------------------
; The next part are activated in the [StateDef 1450], the varset used to are
; var(8) = 1 ,activated to blink white.
; var(9) = 1 ,activated to blink permanently until your power reduce to zero.
; var(10) = 1 ,reduce the power to zero.
; var(11) = 1 ,activated hyper moves only if chakra is ON.
; To stop the varset activated, all varset will stop in value -2. (see below).
; 
[State -2, blink white]
type = PalFX
trigger1 = var(8) = 1 && var(9) != 1 && power > 0
time = 1
add = 255,255,255 
ignorehitpause = 1

[State -2, chakra ON]
type = PalFX
trigger1 = (GameTime%2)=0 && var(9) = 1 && power > 0
time = 1
add = 120,100,40
ignorehitpause = 1

[State -2, Reduce Power]
type = PowerAdd
trigger1 = (GameTime%2)=0 && var(10) = 1 && power > 0
value = -10

; All varset activated will stop in value -2.
[State -2, Stop Blink White]
type = VarSet
trigger1 = power <= 0  && var(8) = 1
trigger2 = var(12) = 1
trigger3 = var(13) = 1
trigger4 = var(14) = 1
trigger5 = stateno = [5000,5999]
var(8) = -2

[State -2, Stop chakra ON]
type = VarSet
trigger1 = power <= 0  && var(9) = 1
trigger2 = var(12) = 1
trigger3 = var(13) = 1
trigger4 = var(14) = 1
var(9) = -2

[State -2, Stop Reduce Power]
type = VarSet
